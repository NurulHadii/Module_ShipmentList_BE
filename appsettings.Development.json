{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "/logs/template-log-.txt",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter,Serilog.Formatting.Compact",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName" ]
  },
  "ElasticConfiguration": {
    "Uri": "http://localhost:9200"
  },
  "AllowedHosts": "*",
  "connectionStrings": {
    "DefaultConnection": "Data Source=core.boox.app,33888;Initial Catalog=db_booxapp_core;Persist Security Info=True;User ID=sa;Password=P@$$w0rd;TrustServerCertificate=True",
    "DefaultTenantConnection": "Data Source=core.boox.app,33888;Initial Catalog=db_booxapp_tenant_0001;Persist Security Info=True;User ID=sa;Password=P@$$w0rd;TrustServerCertificate=True"
  },
  "JWT": {
    "ValidAudience": "BooxAppProject",
    "ValidIssuer": "BooxAppProject",
    "Secret": "BooxAppCoolSecretWillbeBilionare"
  },
  "RequestResponseLogger": {
    "IsEnabled": true,
    "Name": "BooxApp.Web.Module.Api",
    "DateTimeFormat": "yyyy-MM-dd HH:mm:ss"
  }
}